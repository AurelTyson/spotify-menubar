# Uncomment the next line to define a global platform for your project
platform :osx, '10.13'

target 'Spotify Menubar' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Spotify Menubar

  pod 'Alamofire'
  pod 'AlamofireImage'

  pod 'FlatButton', :git => 'https://github.com/OskarGroth/FlatButton.git'

  pod 'OGCircularBar', :git => 'https://github.com/OskarGroth/OGCircularBar.git'

  pod 'RxAlamofire'
  pod 'RxCocoa'
  pod 'RxSwift'

  pod 'SnapKit'

  target 'Spotify MenubarTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'Spotify MenubarUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
